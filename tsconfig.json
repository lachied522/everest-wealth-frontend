{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/app/components/*"
      ],
      "@/context/*": [
        "src/app/(main)/context/*"
      ],
      "@/context/portfolio/*": [
        "src/app/(main)/(portfolio)/context/*"
      ],
      "@/types/*": [
        "src/app/types/*"
      ],
      "@/lib/*": [
        "src/app/lib/*"
      ],
      "@/layouts/*": [
        "src/app/layouts/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
